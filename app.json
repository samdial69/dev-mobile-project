{
  "expo": {
    "name": "coleye",
    "slug": "coleye",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need to access your microphone to enable speech recognition and TTS.",
        "NSSpeakersUsageDescription": "We need to access your speaker to play TTS."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF",
        "permissions": [
          "RECORD_AUDIO"
        ]
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
